<body>
  <nav class="navbar navbar-expand-lg fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="index.html">Meyre Lanches</a>
      <div class="collapse navbar-collapse" id="nav">
        <ul class="navbar-nav ms-auto">
          <li><a class="nav-link" href="index.html">Caixa</a></li>
          <li><a class="nav-link" href="estoque.html">Produtos</a></li>
          <li><a class="nav-link active" href="banco.html">Banco de Dados</a></li>
          <li><a class="nav-link" href="relatorio.html">Relatório</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-5 pt-5">
    <h2 class="text-center text-white mb-5">Banco de Dados Completo</h2>

    <div class="card p-4">
      <h4 class="text-success">Produtos Cadastrados</h4>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead><tr><th>Produto</th><th>Custo</th><th>Desconto %</th><th>Lucro %</th><th>Preço Venda</th><th>Lucro R$</th></tr></thead>
          <tbody id="tabelaBanco"></tbody>
        </table>
      </div>

      <hr>

      <h4 class="text-primary">Vendas Realizadas</h4>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead><tr><th>Data</th><th>Descrição</th><th>Valor</th></tr></thead>
          <tbody id="tabelaVendas"></tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    const estoque = JSON.parse(localStorage.getItem('estoqueMeyre') || '[]');
    const caixa = JSON.parse(localStorage.getItem('caixaMeyre') || '{"movimentos":[]}');

    const tbodyProd = document.getElementById('tabelaBanco');
    estoque.forEach(p => {
      const custoFinal = p.custo * (1 - p.desconto/100);
      const precoVenda = custoFinal * (1 + p.lucro/100);
      const lucroReal = precoVenda - custoFinal;
      tbodyProd.innerHTML += `<tr>
        <td><strong>${p.nome}</strong></td>
        <td>R$ ${p.custo.toFixed(2)}</td>
        <td>${p.desconto}%</td>
        <td>${p.lucro}%</td>
        <td class="text-success">R$ ${precoVenda.toFixed(2)}</td>
        <td class="text-warning">R$ ${lucroReal.toFixed(2)}</td>
      </tr>`;
    });

    const tbodyVendas = document.getElementById('tabelaVendas');
    caixa.movimentos.forEach(m => {
      tbodyVendas.innerHTML += `<tr>
        <td>${m.data}</td>
        <td>${m.desc}</td>
        <td class="text-success fw-bold">R$ ${m.valor.toFixed(2)}</td>
      </tr>`;
    });
  </script>
